{
  "name": "pi-extensions-workspace",
  "private": true,
  "workspaces": {
    "packages": [
      "extensions/tools",
      "extensions/mermaid",
      "extensions/command-palette",
      "extensions/editor"
    ],
    "catalog": {
      "@mariozechner/pi-coding-agent": "^0.54.2",
      "@mariozechner/pi-tui": "^0.54.2"
    }
  },
  "scripts": {
    "lint": "oxlint --type-aware --format=stylish --type-check --report-unused-disable-directives",
    "lint:fix": "oxlint --type-aware --format=stylish --type-check --fix --report-unused-disable-directives",
    "lint:github": "oxlint --type-aware --type-check --format=github --report-unused-disable-directives",
    "format": "oxfmt --write",
    "format:check": "oxfmt --check",
    "typecheck": "bun run --filter './extensions/mermaid' typecheck && bun run --filter './extensions/command-palette' typecheck && bun run --filter './extensions/editor' typecheck",
    "check": "bun run format && bun run lint && bun run typecheck"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "oxfmt": "^0.35.0",
    "oxlint": "^1.50.0",
    "oxlint-tsgolint": "^0.15.0",
    "typescript": "^5.9.2"
  }
}
